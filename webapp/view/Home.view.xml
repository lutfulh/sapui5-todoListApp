<mvc:View controllerName="sap.employeeList.Employees.controller.Home" xmlns:mvc="sap.ui.core.mvc" xmlns:l="sap.ui.layout" displayBlock="true"
	xmlns="sap.m">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
						<List id="ShortProductList" headerText="List of all employees" items="{ path: 'employee>/employees', sorter: { path: 'Name' } }"
							class="sapUiResponsiveContentPadding">
							<items>
								<StandardListItem title="{employee>firstName} {employee>lastName}" type="Navigation" press="onListItemPress"/>
							</items>
						</List>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>