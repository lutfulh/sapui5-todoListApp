<mvc:View controllerName="Home.todoLIstApp.controller.Main" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
						<List items="{todo>/}">
							<items>
								<StandardListItem title="{todo>task}"
									description="{ parts:['i18n>todoDescription', 'todo>description'], formatter: 'jQuery.sap.formatMessage'}"
									info="{ path: 'todo>status', formatter: '.formatter.fnFormatStatus'}"
									type="Navigation"
									press="onPressItem"/>
							</items>
						</List>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>